{
  "name": "api-boilerplate",
  "description": "Simple Node.js+Express+Sequelize API server.js boilerplate",
  "repository": "https://github.com/s1moe2/express-api-boilerplate",
  "version": "1.0.0",
  "author": "Diogo SimÃµes",
  "license": "MIT",
  "scripts": {
    "doc": "esdoc",
    "lint": "eslint src/ --ext .js",
    "dev": "NODE_ENV=development nodemon ./src/bin/server.js",
    "dev-hard": "NODE_ENV=development sequelize db:drop && sequelize db:create && sequelize db:migrate && DEBUG=* nodemon ./src/bin/server.js",
    "pretest": "NODE_ENV=test sequelize db:migrate",
    "test": "NODE_ENV=test nyc --reporter=text --reporter=html mocha --exit",
    "start": "NODE_ENV=production node ./src/bin/server.js",
    "report": "NODE_ENV=test nyc report",
    "coverage": "NODE_ENV=test nyc --reporter=text-lcov > coverage.lcov mocha -r chai/register-should --recursive --exit",
    "migrate": "sequelize db:migrate"
  },
  "dependencies": {
    "app-root-path": "^2.1.0",
    "bcrypt": "3.0.3",
    "bcrypt-promise": "2.0.0",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.0.0",
    "helmet": "^3.15.0",
    "http-status-codes": "^1.3.0",
    "jsonwebtoken": "^8.4.0",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.7.1",
    "sequelize": "^5.8.11",
    "sparkpost": "^2.1.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.0",
    "codecov": "^3.1.0",
    "coveralls": "^3.0.2",
    "dotenv": "^6.2.0",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "~5.9.0",
    "eslint-config-standard": "~12.0.0",
    "eslint-plugin-import": "~2.14.0",
    "eslint-plugin-node": "~8.0.0",
    "eslint-plugin-promise": "~4.0.1",
    "eslint-plugin-standard": "~4.0.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "sequelize-cli": "^5.4.0",
    "sinon": "^7.1.1"
  },
  "engines": {
    "node": ">= 10"
  }
}
